<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F3F4F6"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <!-- 🔹 Developer 1 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/login_card_bg"
            android:padding="16dp"
            android:elevation="8dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/fotoDev1"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/gatoesencial"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Marcos Changala"
                android:textColor="#48795B"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Rol: QA Tester"
                android:textColor="#333333" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo: marcos.changala@inacapmail.cl"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Institución: Instituto Profesional Inacap"
                android:textColor="#333333" />

            <!-- 🆕 Campo sección -->
            <TextView
                android:id="@+id/txtSeccion1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Sección: D-B50-N4-P13-C1"
                android:textColor="#333333" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Carrera: Analista Programador"
                android:textColor="#333333" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/iconGitHub1"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_github"
                    android:layout_margin="8dp" />
            </LinearLayout>
        </LinearLayout>

        <!-- 🔹 Developer 2 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/login_card_bg"
            android:padding="16dp"
            android:elevation="8dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/fotoDev2"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:src="@drawable/catmeme"
                android:layout_gravity="center"
                android:scaleType="centerCrop"
                android:layout_marginBottom="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Marlon Tabilo"
                android:textColor="#48795B"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Rol: Full Stack Developer/Tester"
                android:textColor="#333333" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Correo: marlon.tabilo@inacapmail.cl"
                android:textColor="#333333"
                android:gravity="center"
                android:layout_marginTop="4dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Institución: Instituto Profesional Inacap"
                android:textColor="#333333" />

            <!-- 🆕 Campo sección -->
            <TextView
                android:id="@+id/txtSeccion2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center"
                android:text="Sección: D-B50-N4-P13-C1"
                android:textColor="#333333" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:text="Carrera: Analista Programador"
                android:textColor="#333333" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <ImageView
                    android:id="@+id/iconGitHub2"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_github"
                    android:layout_margin="8dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
